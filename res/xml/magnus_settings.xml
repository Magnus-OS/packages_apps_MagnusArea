<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/magnus_settings_title" >

    <PreferenceCategory
           android:title="Customizations" >

        <!-- Themes -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="interface_category" 
            android:title="@string/interface_title" 
            android:summary="@string/magnus_interface_summary_title"
            android:fragment="com.magnus.settings.fragments.InterfaceSettings" 
            android:icon="@drawable/ic_settings_ui"/>

        <!-- Quick Settings panel -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="quicksettings_category"
            android:title="@string/quicksettings_title"
            android:summary="@string/magnus_quicksettings_summary_title"
            android:fragment="com.magnus.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Lock Screen -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="lockscreen_category"
            android:title="@string/lockscreen_title"
            android:summary="@string/magnus_lockscreen_summary_title"
            android:fragment="com.magnus.settings.fragments.LockscreenSettings"
            android:icon="@drawable/ic_settings_lockscreen"/>
			
        <!-- Gestures -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="gestures_category"
            android:title="@string/gestures_title"
            android:summary="@string/magnus_gesture_summary_title"
            android:fragment="com.magnus.settings.fragments.GestureSettings"
            android:icon="@drawable/ic_settings_gest"/>

        <!-- Notifications -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="notifications_category"
            android:title="@string/notifications_title"
            android:summary="@string/magnus_notifications_summary_title"
            android:fragment="com.magnus.settings.fragments.NotificationSettings"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- LineageParts -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="parts_category"
            android:title="@string/parts_title"
            android:summary="@string/magnus_parts_summary_title"
            android:fragment="com.magnus.settings.fragments.PartsSettings"
            android:icon="@drawable/ic_settings_parts"/>

        <!-- Misc -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="misc_category"
            android:title="@string/misc_title"
            android:summary="@string/magnus_misc_summary_title"
            android:fragment="com.magnus.settings.fragments.MiscSettings"
            android:icon="@drawable/ic_settings_misc"/>

        <!-- About Devs -->
        <com.magnus.settings.preferences.CardviewPreference
            android:key="dev_info"
            android:title="@string/magnus_about_info"
            android:summary="@string/magnus_about_info_summary_title"
            android:fragment="com.android.settings.custom.magnusDevsInfoFragment"
            android:icon="@drawable/ic_magnus_about"/>

    </PreferenceCategory>

</PreferenceScreen>
